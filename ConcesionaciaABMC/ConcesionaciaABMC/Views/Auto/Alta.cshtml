@model ConcesionaciaABMC.Models.VMAuto
@{
    ViewBag.Title = "Alta";
}


<h2>Alta de Autos</h2>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Patente</label>
                @Html.TextBoxFor(x => x.AutoModel.patente, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Marca</label>
                @Html.DropDownListFor(x=>x.AutoModel.idMarca, new SelectList (Model.TipoMarcas, "idMarca", "nombre"), "Seleccione", htmlAttributes: new { @class="form-control"})
            </div>
            <div class="form-group">
                <label>Kilometraje</label>
                @Html.TextBoxFor(x => x.AutoModel.km, htmlAttributes: new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label>Quiere Promocion</label>
                @Html.CheckBoxFor(x=> x.AutoModel.promocion)
            </div>
            <div class="form-group">
                <label>Precio</label>
                @Html.TextBoxFor(x => x.AutoModel.precio, htmlAttributes: new { @class = "form-control" })

            </div>

            <input type="submit" value="Aceptar" class="btn btn-success" />}
    </div>
    <div class="col-md-2"></div>
</div>