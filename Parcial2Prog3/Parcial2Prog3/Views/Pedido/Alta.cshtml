@model Parcial2Prog3.Models.VMPedido
@{
    ViewBag.Title = "Alta";
}

<h2>Alta de Pedidos</h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Nombre Cliente</label>
                @Html.TextBoxFor(x => x.PedidoModel.Cliente, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Tipo Desayuno</label>
                @Html.DropDownListFor(x => x.PedidoModel.IdTipoDesayuno, new SelectList(Model.DesayunoModel, "Id", "Nombre"), "SELECCIONE", htmlAttributes: new { @class = "form-control" })

            </div>
            <div>
                
                <label>Tipo Delivery</label>
                @Html.DropDownListFor(x => x.PedidoModel.IdTipoDelivery, new SelectList(Model.DeliveryModel, "Id", "Nombre"), "SELECCIONE", htmlAttributes: new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label>Porciones</label>
                @Html.TextBoxFor(x => x.PedidoModel.Porciones, htmlAttributes: new { @class = "form-control" })
            </div>


            <input type="submit" value="Aceptar" class="btn btn-primary" />
        }
    </div>
    <div class="col-md-2"></div>
</div>
